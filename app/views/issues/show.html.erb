<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% case @issue.status.downcase %>
      <% when "active" %>
        <div class="alert alert-success form-control form-fresh text-center">
          <p>Active</p>
        </div>
      <% when "closed" %>
        <div class="alert alert-danger form-control form-fresh text-center">
          <p>Closed</p>
        </div>
      <% end %>
      <div class="form-control form-fresh">
        <p><%= @issue.subject %></p>
      </div>
    </div>
  </div>
</div>