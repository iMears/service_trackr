<div class="row">
  <div class="col-lg-12">
    <br><br><br><br> <!-- take line breaks out!!! -->
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>DATE</th>
          <th>PRIORITY</th>
          <th>SUBJECT</th>
          <th>DESCRIPTION</th>
          <th>STATUS</th>
        </tr>
      </thead>
      <tbody>
        <% issues.each do |issue| %>
          <tr data-link="<%= user_issue_path(current_user, issue)%>">
            <td data-label="ID">
              <%= issue.id %>
            </td>
            <td data-label="DATE">
              <%= issue.created_at.to_s(:long) %>
            </td>
            <td data-label="PRIORITY">
              <%= issue.priority %>
            </td>
            <td data-label="SUBJECT">
              <%= issue.subject %>
            </td>
            <td data-label="DESCRIPTION">
              <%= issue.description %>
            </td>
            <td data-label="STATUS">
              <%= issue.status %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- end column -->
</div> <!-- end row -->