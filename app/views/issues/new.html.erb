<%= render 'shared/header', page_title: "Create New Issue" %>
<div class="container">
  <%= link_to "< Back", :back %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= form_for @issue, url: {action: "create"}, html: {class: "form-group"} do |f| %>
        <%= f.text_field :subject, placeholder: "* Subject", class: "form-control form-fresh" %>
        <%= f.text_field :priority, placeholder: "* Priority", class: "form-control form-fresh" %>
        <%= f.text_area :description, placeholder: "* Description of the isssue", class: "form-control textarea-fresh" %>
        <%= f.submit "Submit Issue", class: "btn btn-lg btn-fresh form-control" %>
      <% end %>
    </div>
  </div>
</div>