<%= render 'shared/header', page_title: "Issue ##{@issue.id} History" %>
<div class="container">
  <%= link_to "< Back", :back %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= link_to "+ Add Entry", new_user_issue_entry_path(current_user, @issue), class: "btn btn-lg form-control btn-fresh" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <% @entries.each do |entry| %>
        <div class="well entry">
          Posted by: <%= entry.posted_by %>
          <div class="pull-right">
            <%= entry.created_at.to_s(:short) %>
          </div>
          <h4><%= entry.body %></h4>
        </div>
      <% end %>
    </div>
  </div>
</div>