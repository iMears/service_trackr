<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= link_to "+ Add Entry", new_user_issue_entry_path(current_user, @issue), class: "btn btn-lg form-control btn-fresh" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-2">
      <%= @entries.each do |entry| %>
        <div class="well">
          <h4>Posted by: <%= entry.posted_by %></h4>
          <h3 class="text-center"><%= entry.body %></h3>
        </div>
      <% end %>
    </div>
  </div>
</div>