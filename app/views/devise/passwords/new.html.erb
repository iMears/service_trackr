<%= render 'shared/header', page_title: "Forgot Password?" %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.email_field :email, autofocus: true, placeholder: "*Your Email", class: "form-control form-fresh" %>
        <%= f.submit "Send Reset Password Instructions", class: "btn btn-lg btn-fresh form-control" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
