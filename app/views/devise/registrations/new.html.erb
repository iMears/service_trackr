<%= render 'shared/header', page_title: "Welcome, Please Sign Up!" %>
<div class="container">
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.text_field :first_name, autofocus: true, placeholder: "First name", class: "form-control form-fresh" %>
        </div>
        <div class="field">
          <%= f.text_field :last_name, autofocus: true, placeholder: "Last name", class: "form-control form-fresh" %>
        </div>
        <div class="field">
          <%= f.text_field :company, autofocus: true, placeholder: "Company", class: "form-control form-fresh" %>
        </div>
        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control form-fresh" %>
        </div>
        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control form-fresh" %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class: "form-control form-fresh" %>
        </div>
        <div class="actions text-center">
          <%= f.submit "Create My Account", class: "btn btn-lg form-control btn-fresh" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>